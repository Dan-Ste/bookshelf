<div class="bc-container">
  {{#book-form
      book=newBook
      authors=authors
      bookshelves=bookshelves
      uploadBookCover=uploadBookCover
      uploadBookFile=uploadBookFile
      addNewAuthor=addNewAuthor
      addNewBookshelf=addNewBookshelf
  }}
    <button class="ui button basic primary fluid {{if createBook.isRunning 'loading'}}"
      onclick={{perform createBook newBook}}>
      Create New Book
    </button>
  {{/book-form}}
</div>