 {{bookshelf.title}}

 {{#liquid-if isHovering class="fade" local-class="action-icon"}}
  <i class="icon write link"
    local-class="edit-icon"
    onclick={{action onEditClick}}
  ></i>
  <i class="icon trash link"
    local-class="delete-icon"
    onclick={{action onDeleteClick}}
  ></i>
{{else}}
  <i style={{html-safe (concat "color: " bookshelf.color)}}
    class="icon circle link"
  ></i>
{{/liquid-if}}
