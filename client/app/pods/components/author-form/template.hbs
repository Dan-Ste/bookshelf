<div local-class="form">

  <div class="ui form">

    <div class="field">
      <label>First name</label>
      {{one-way-input author.firstName update=(action (mut author.firstName))}}
    </div>

    <div class="field">
      <label>Last name</label>
      {{one-way-input author.lastName update=(action (mut author.lastName))}}
    </div>

    <div class="field">
      <label>Patronymic</label>
      {{one-way-input author.patronymic update=(action (mut author.patronymic))}}
    </div>

    <div class="field">
      <label>Biography</label>
      {{one-way-textarea author.biography update=(action (mut author.biography)) rows="3"}}
    </div>

    <div class="field">
      <label>Year of birth</label>
      {{one-way-number author.birthYear update=(action (mut author.birthYear))}}
    </div>

    {{yield}}

  </div>

</div>

<div local-class="files">
  {{author-portrait
      portraitUrl=author.portraitUrl
  }}

  <div local-class="btn-group">
    {{upload-button
        title=(if author.portraitUrl "Change author portrait" "Upload author portrait")
        fileInputId="author-portrait-image"
        update=(perform tasks.uploadAuthorPortrait author)
        isUploaded=author.portraitUrl
    }}
  </div>
</div>