<div class="ui mini input" local-class="title-input">
  {{one-way-input bookshelf.title update=(action (mut bookshelf.title))}}
</div>

<div local-class="color-picker">
  {{#power-select
      selected=bookshelf.color
      options=BookshelfColors
      searchEnabled=false
      renderInPlace=true
      selectedItemComponent="bookshelf-color"
      onchange=(action (mut bookshelf.color))
  as |color|}}
    {{bookshelf-color local-class="selected-color" option=color defaultStyle=false}}
  {{/power-select}}
</div>

<i class="icon checkmark link"
  onclick={{action onApprove}}
  local-class="approve-icon"
></i>

<i class="icon remove link"
  onclick={{action onDeny}}
  local-class="deny-icon"
></i>